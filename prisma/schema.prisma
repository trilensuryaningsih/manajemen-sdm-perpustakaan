generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  role       Role      @relation(fields: [roleId], references: [id])
  roleId     Int
  alamat     String?
  
  // --- KOLOM BARU (Sesuai Desain) ---
  phone      String?   // Nomor Telepon (Boleh kosong)
  position   String?   // Jabatan/Posisi (Boleh kosong)
  joinDate   DateTime? // Tanggal Bergabung (Boleh kosong)
  // ----------------------------------

  createdAt  DateTime  @default(now())
  attendance Attendance[]
  reports    DailyReport[]
  tasks      Task[]    @relation("Assignee")
  createdTasks Task[]  @relation("Creator")
  comments TaskComment[]
  cuti      Cuti[]
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  date      DateTime
  checkIn   DateTime
  checkOut  DateTime?
  note      String?
  location  String?
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  assignee    User?     @relation("Assignee", fields: [assigneeId], references: [id])
  assigneeId  Int?
  createdById Int
  createdBy   User      @relation("Creator", fields: [createdById], references: [id])
  status      TaskStatus @default(PENDING)
  dueDate     DateTime?
  comments    TaskComment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  prioritas   prioritas @default(NORMAL)
}

model TaskComment {
  id      Int    @id @default(autoincrement())
  task    Task   @relation(fields: [taskId], references: [id])
  taskId  Int
  author  User   @relation(fields: [authorId], references: [id])
  authorId Int
  text    String
  createdAt DateTime @default(now())
}

model DailyReport {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  date      DateTime
  note      String
  attachments Attachment[]
  createdAt DateTime @default(now())
}

model Attachment {
  id        Int @id @default(autoincrement())
  filename  String
  url       String
  report    DailyReport? @relation(fields: [reportId], references: [id])
  reportId  Int?
}

model ActivityLog {
  id        Int @id @default(autoincrement())
  userId    Int
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}

model Cuti {
  id                Int      @id @default(autoincrement())
  judul             String
  tanggalMulai      DateTime
  tanggalSelesai    DateTime
  alasan            String
  status            StatusCuti @default(MENUNGGU_KONFIRMASI)
  alasanPenolakan   String?     
  user              User?    @relation(fields: [userId], references: [id])
  userId            Int?

}


enum TaskStatus {
  PENDING
  DALAM_PROGERSS
  SELESAI
}

enum prioritas {   // ‚Üê enum ditambahkan DI SINI
  TINGGI
  NORMAL
}

enum StatusCuti {
  MENUNGGU_KONFIRMASI
  DISETUJUI
  DITOLAK
}


